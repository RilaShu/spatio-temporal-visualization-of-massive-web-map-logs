# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = tab
tab_width = 2

[*.scala]
indent_style = tab2
indent_size = tab
tab_width = 2

[*.{js,json}]
indent_style = space
indent_size = 4


[*.{py,java,gvy,gy,gsh,groovy}]
indent_style = tab
indent_size = tab
tab_width = 4
